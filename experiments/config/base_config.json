{
  "input_recipies_file": "data/recipes_samples.csv",

  "output_experiments_dir": "experiments/exp{experiment_id}/",
  "output_recipies_embedding_file": "experiments/exp{experiment_id}/recipies_samples_embeddings.csv",

  "output_retrival_dir": "experiments/exp{experiment_id}/metrics",
  "output_retrival_file": "experiments/exp{experiment_id}/metrics/retrival_results.json",
  "output_query_metrics_file": "experiments/exp{experiment_id}/metrics/retrival_metrics.json",
  "output_per_query_file": "experiments/exp{experiment_id}/metrics/retrival_per_query.json",
  "output_retrival_plot_metrics_dir": "experiments/exp{experiment_id}/metrics/plots",

  "query_file_path": "data/query/query_test.json",

  "models": [
    "intfloat/e5-base-v2",
    "sentence-transformers/all-MiniLM-L6-v2",
    "BAAI/bge-base-en-v1.5",
    "Snowflake/snowflake-arctic-embed-m",
    "Snowflake/snowflake-arctic-embed-m-v1.5"
  ],

  "columns_embedding": {
    "config_1": ["NAME", "TAGS", "INGREDIENTS", "STEPS", "DESCRIPTION"],
    "config_2": ["TAGS", "INGREDIENTS", "DESCRIPTION"],
    "config_3": ["TAGS", "STEPS", "DESCRIPTION"],
    "config_4": ["TAGS", "INGREDIENTS"],
    "config_5": ["TAGS", "STEPS"],
    "config_6": ["TAGS", "DESCRIPTION"]
  },
  
  "columns_to_clean": {
    "NAME" : {
      "column_name": "NAME_CLEAND",
      "start_text": "recipe name"
    },
    "TAGS" : {
      "column_name": "TAGS_CLEAND",
      "start_text": "recipe tags"
    },
    "INGREDIENTS" : {
      "column_name": "INGREDIENTS_CLEAND",
      "start_text": "recipe ingredients"
    },
    "STEPS" : {
      "column_name": "STEPS_CLEAND",
      "start_text": "recipe steps"
    },
    "DESCRIPTION" : {
      "column_name": "DESCRIPTION_CLEAND",
      "start_text": "recipe description"
    }
  },

  "experiments_specifique_params": {
    "experiment_id": 1 ,
    "top_k": [200]
  }

}
